<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/hvalue"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="right|center_vertical"
            android:text="0.00000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/wpricelist"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hvalue"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toEndOf="@+id/hdescription"
            android:layout_toRightOf="@+id/hdescription"
            android:gravity="right|center_vertical"
            android:text="$0.00"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/wimagecryptolist"
            android:layout_width="64dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/btc" />

        <TextView
            android:id="@+id/hname"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_toStartOf="@+id/hvalue"
            android:layout_toLeftOf="@+id/hvalue"
            android:layout_toEndOf="@+id/wimagecryptolist"
            android:layout_toRightOf="@+id/wimagecryptolist"
            android:text="Bitcoin"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/hdescription"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hname"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="11dp"
            android:layout_toEndOf="@+id/wimagecryptolist"
            android:layout_toRightOf="@+id/wimagecryptolist"
            android:text="btc" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>