<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/amountlist"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hname"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:gravity="right|center_vertical"
            android:text="$54.215"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imagecryptolist"
            android:layout_width="64dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/btc" />

        <TextView
            android:id="@+id/namecryptolist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:layout_toStartOf="@+id/amountlist"
            android:layout_toLeftOf="@+id/amountlist"
            android:layout_toEndOf="@+id/imagecryptolist"
            android:layout_toRightOf="@+id/imagecryptolist"
            android:text="Bitcoin"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/symbolcryptolist"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namecryptolist"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="11dp"
            android:layout_toEndOf="@+id/imagecryptolist"
            android:layout_toRightOf="@+id/imagecryptolist"
            android:text="btc" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>